<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="2dp"
    android:background="@android:color/white"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:id="@+id/post_column"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp"


            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile"
                android:layout_gravity="center"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:padding="2dp">


                    <TextView
                        android:id="@+id/post_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="user name"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:layout_marginTop="2dp"


                    >


                    <TextView
                        android:id="@+id/post_fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="unknown"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold"
                        android:textSize="9sp"

                        />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/popup_button_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/popup_button"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:background="@drawable/ic_more_horiz"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="6dp"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:padding="5dp"
            android:text="Post Description"
            android:textColor="@android:color/black"
            android:textSize="14sp" />


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/progress_bar"

            />
            <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="430dp"

                />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/like"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/heartempty8"
                    android:padding="5dp"/>
                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/comment8"
                    android:layout_marginStart="13dp"
                    android:padding="5dp"
                    />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/share8"
                    android:layout_marginStart="13dp"
                    android:padding="5dp"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/saved"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_ribbon"
                android:padding="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/postlikes"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like"
                android:layout_marginStart="5dp"
                android:textColor="@android:color/black"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:id="@+id/comment_layout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all "    
                android:layout_marginStart="5dp"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/postcomment"
                android:textSize="12sp"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" comments"
                android:textSize="12sp"


                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_marginTop="2dp"
            >


            <TextView
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="31-August-2018"
                android:textColor="@android:color/darker_gray"
                android:textSize="9sp"

                />

            <TextView
                android:id="@+id/post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:54"
                android:textColor="@android:color/darker_gray"
                android:textSize="9sp"


                />
        </LinearLayout>
    </LinearLayout>
    <TableRow
        android:layout_marginTop="3dp"
        android:layout_below="@+id/post_column"
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/icongrey">

    </TableRow>

</RelativeLayout>